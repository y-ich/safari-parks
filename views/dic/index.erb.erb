require 'uri'

def bookmarklet filename
  File.open(filename, 'r') do |file|
    js = URI.escape(file.read).sub(/SERVER_DOMAIN/) do |m|
      '<%= ' + m + ' %%>'
    end
    js.sub(/twitter_id=/) do |m|
      m + '" + document.getElementById(\'twitter_id\').value + "'
    end
  end
end
%>
